@page "/shapes"

<style>
    h1 {
        text-align: center;
        color: orangered;
        font-family: 'Times New Roman', Times, serif;
        font-size: 50px;
        font-weight: bold;
    }
    .shapes-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding: 40px;
        background: #f0f8ff;
    }

    .shape-box {
        display: flex;
        flex-direction: column;
        align-items: center;
        animation: fadeIn 0.6s ease forwards;
        opacity: 0;
        transform: scale(0.5);
    }

    .shape-name {
        margin-top: 20px;
        font-weight: bold;
        text-align: center;
        font-size:30px;
        font-family:'Times New Roman', Times, serif;
        /* color; */
    }

    @@keyframes fadeIn {
        to

    {
        opacity: 1;
        transform: scale(1);
    }

    }

    /* Common style for all shapes */
    .shape {
        width: 100px;
        height: 100px;
        margin: 5px;
    }

    .circle {
        background: orange;
        border-radius: 50%;
    }

    .square {
        background: blue;
    }

    .rectangle {
        width: 150px;
        height: 80px;
        background: red;
    }

    .oval {
        width: 120px;
        height: 80px;
        background: purple;
        border-radius: 50%;
    }

    .triangle {
        width: 0;
        height: 0;
        border-left: 50px solid transparent;
        border-right: 50px solid transparent;
        border-bottom: 100px solid green;
    }

    .cylinder {
        width: 80px;
        height: 120px;
        background: lightgray;
        border-radius: 50% / 10%;
        position: relative;
    }

        .cylinder::before,
        .cylinder::after {
            content: '';
            position: absolute;
            width: 100%;
            height: 20px;
            border-radius: 50%;
            background: gray;
            left: 0;
        }

        .cylinder::before {
            top: -10px;
        }

        .cylinder::after {
            bottom: -10px;
        }

    .cube {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #ccc, #666);
        box-shadow: 10px 10px 0 #333;
    }

    .cuboid {
        width: 150px;
        height: 80px;
        background: linear-gradient(135deg, #f88, #800);
        box-shadow: 10px 10px 0 #400;
    }

    .sphere {
        background: radial-gradient(circle at 30% 30%, #fff, #444);
        border-radius: 50%;
    }

    
    .hexagon {
        width: 100px;
        height: 55px;
        background: #00aaff;
        position: relative;
        margin-top: 25px;
    }

        .hexagon::before,
        .hexagon::after {
            content: "";
            position: absolute;
            width: 0;
            border-left: 50px solid transparent;
            border-right: 50px solid transparent;
        }

        .hexagon::before {
            bottom: 100%;
            border-bottom: 27.5px solid #00aaff;
        }

        .hexagon::after {
            top: 100%;
            border-top: 27.5px solid #00aaff;
        }

</style>

<h1>Shapes Name</h1>
<div class="shapes-container">
    @for (int i = 0; i < Shapes.Count; i++)
    {
        var shape = Shapes[i];
        <div class="shape-box" style="animation-delay:@(i * 0.3)s">
            <div class="shape @shape.CssClass"></div>
            <div class="shape-name">@shape.DisplayName</div>
        </div>
    }
</div>

@code {
    private List<(string CssClass, string DisplayName)> Shapes = new()
    {
        ("circle", "Circle"),
        ("triangle", "Triangle"),
        ("square", "Square"),
        ("rectangle", "Rectangle"),
        ("oval", "Oval"),
        ("cylinder", "Cylinder"),
        ("cube", "Cube"),
        ("cuboid", "Cuboid"),
        ("sphere", "Sphere"),
        ("hexagon", "Hexagon")
    };
}
