@page "/Syllabus/{Subject}"
@inject IJSRuntime JSRuntime
@using System.Collections.Generic
@using Microsoft.AspNetCore.Components

<div class="container-fluid FSLM-BG">
    <div class="container mt-4 mb-4">
        <div class="row cardContainer mt-4 mb-4">
            <h1>@Subject</h1>
            <div class="container FSLM-menue">
                @{
                    var textColors = new List<string>
                {
                "#E67E22", "#2ECC71", "#5D6D7E","#FF5733" , "#AF7AC5", "#F4D03F",
                "#C0392B", "#1ABC9C", "#33A1FF", "#28B463",
                };
                    int index = 0;
                }

                @foreach (var item in GetSyllabusItems(Subject))
                {
                    var textColor = textColors[index % textColors.Count];
                    index++;

                    <div style="padding:1px; margin:1px 0;">
                        @if (!string.IsNullOrEmpty(item.Link))
                        {
                            <a href="@item.Link" style="color:@textColor; text-decoration:none;">
                                <h3>@item.Name</h3>
                            </a>
                        }
                        else
                        {
                            <h3 style="color:@textColor;">@item.Name</h3>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

