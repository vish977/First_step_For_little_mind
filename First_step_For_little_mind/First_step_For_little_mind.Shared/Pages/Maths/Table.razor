@page "/table"

<div class="container-fluid">
    <h3 class="heading">Table</h3>


    <div class="input-container">
        <label for="number" class="label">Enter a number: </label>
        <input type="number" @bind="number" placeholder="Enter a number" class="input-box" />
        <button @onclick="GenerateTable" class="generate-btn">Generate Table</button>
    </div>

    <div class="table-output">@((MarkupString)tableOutput)</div>
</div>

@code {
    private int number;
    private string tableOutput;

    private void GenerateTable()
    {
        if (number > 0)
        {
            var tableHtml = "<div class='table-grid'>";
            for (int i = 1; i <= 10; i++)
            {
                tableHtml += $"<div class='table-row'>{number} x {i} = <span class='result'>{number * i}</span></div>";
            }
            tableHtml += "</div>";
            tableOutput = tableHtml;
        }
        else
        {
            tableOutput = "Please enter a valid number.";
        }
    }
}

