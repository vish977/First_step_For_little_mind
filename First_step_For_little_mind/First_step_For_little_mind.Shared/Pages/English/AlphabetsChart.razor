@page "/AlphabetsChart"

<style>
    .container {
    margin-top: 15px;
    margin-bottom: 15px;
    }

    .FSLM-container {
    display:flex;
    justify-content:center;
    }

    .main {
    box-shadow: 5px 5px 15px rgba(0, 0, 0, 0.5);
    height:100%;
    width:70vw;
    }

    .Letter {
        margin: 15px;
        height: 100px;
        width: 100px;
    }

    @@media screen and (max-width: 375px) {

        .Letter {
            height: 40px;
            width: 40px;
        }

        .main {
            width: 95vw;
        }
    }

    @@media screen and (max-width: 576px) {

        .Letter {
            height:60px;
            width:60px;
        }
    }
</style>

<div class="container FSLM-container">
    <div class="main row">
        @foreach (var letter in Letters)
        {
            <div class="@GetClass(letter)">
                <a href="/English/@letter">
                    <img class="Letter" src="@($"/_content/First_step_For_little_mind.Shared/Image/English/a_z_Full_Images/{letter}.jpg")"
                    alt="@letter" />
                </a>
            </div>
        }
    </div>
</div>

@code {
    private List<string> Letters = Enumerable.Range(65, 26) 
        .Select(x => ((char)x).ToString())
        .ToList();

    private string GetClass(string letter) {
        if (letter == "Y") return "col-6 d-flex justify-content-sm-end";
        else if (letter == "Z") return "col-6 d-flex justify-content-sm-start";
        else return "col-3 FSLM-container";
    }
}

