@page "/Video/{Category}/{TopicName}"
@inject IJSRuntime JS

<style>
    html, body {
        margin: 0;
        padding: 0;
        height: 100%;
        background-color: black;
        overflow: hidden;
    }

    video {
        width: 100vw;
        height: 100vh;
        object-fit: cover;
        display: block;
    }
</style>

@if (!string.IsNullOrEmpty(VideoPath))
{
    <video src="@VideoPath" controls autoplay></video>
}
else
{
    <p style="color: white;">Video not found for category: @Category and topic: @TopicName</p>
}

@code {
    [Parameter] public string? Category { get; set; }
    [Parameter] public string? TopicName { get; set; }

    private string? VideoPath;

    protected override void OnParametersSet()
    {
        if (!string.IsNullOrEmpty(Category) && !string.IsNullOrEmpty(TopicName))
        {
            VideoPath = $"_content/First_step_For_little_mind.Shared/video/{Category}/{TopicName}.mp4";
        }
    }
}
