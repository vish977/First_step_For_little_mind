@page "/hjhj"
@using System.Linq

<div class="background-fixed">
    <div class="carousel-container text-center">
        @if (currentIndex < selectedWords.Count)
        {
            <div class="card p-3 bg-light bg-opacity-75">
                <div class="FSLM-WordImg mb-3">
                    <img src="@GetImagePath(selectedWords[currentIndex])" alt="Image of @selectedWords[currentIndex]" />
                </div>

                <div class="FSLM-Word mb-3">
                    @foreach (var (ch, index) in selectedWords[currentIndex].Select((c, i) => (c, i)))
                    {
                        <span class="color-@(@index % 7)">@ch</span>
                    }
                </div>

                <div class="d-flex justify-content-center gap-3">
                    <button class="btn btn-primary" @onclick="ShowPreviousWord" disabled="@(currentIndex == 0)">Previous</button>
                    <button class="btn btn-primary" @onclick="ShowNextWord" disabled="@(currentIndex == selectedWords.Count - 1)">Next</button>
                </div>
            </div>
        }
        else
        {
            <div class="card p-4 bg-light bg-opacity-75">
                <h3 class="FSLM-Word">Great job! You've learned all the words.</h3>
            </div>
        }
    </div>
</div>

@code {
    private int currentIndex = 0;
    private List<string> selectedWords = new() { "APPLE", "BANANA", "MANGO" }; // Example words

    private void ShowNextWord()
    {
        if (currentIndex < selectedWords.Count - 1)
        {
            currentIndex++;
        }
    }

    private void ShowPreviousWord()
    {
        if (currentIndex > 0)
        {
            currentIndex--;
        }
    }

    private string GetImagePath(string word) => $"images/{word}.jpg"; // Adjust path as needed
}
